<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="410dp"
        android:layout_height="150dp"
        android:id="@+id/edtnum"
        android:inputType="number"
        android:focusable="false"
        android:textSize="30dp"
        android:textColor="#FBFBFC"
        android:layout_gravity="end|bottom"
        android:textAlignment="textEnd"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#1B1919">
       <Button
           android:layout_width="100dp"
           android:layout_height="100dp"
           android:text="C"
           android:textSize="40dp"
           android:background="#1B1919"
           android:textColor="#F2F3F5"
           android:id="@+id/btnc"
           />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="+/_"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btnadd1"
            android:layout_toRightOf="@id/btnc"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="N"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btnback"
            android:layout_toRightOf="@id/btnadd1"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="/"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#ff9800"
            android:id="@+id/btndiv"
            android:layout_toRightOf="@id/btnback"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="7"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn7"
            android:layout_below="@id/btnc"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="8"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn8"
            android:layout_toRightOf="@id/btnc"
            android:layout_below="@id/btnadd1"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="9"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn9"
            android:layout_toRightOf="@id/btnadd1"
            android:layout_below="@id/btnback"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="*"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#ff9800"
            android:id="@+id/btnmul"
            android:layout_toRightOf="@id/btn9"
            android:layout_below="@id/btnback"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="4"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn4"
            android:layout_below="@id/btn7"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="5"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn5"
            android:layout_below="@id/btn8"
            android:layout_toRightOf="@id/btn7"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="6"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn6"
            android:layout_below="@id/btn9"
            android:layout_toRightOf="@id/btn8"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="-"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#ff9800"
            android:id="@+id/btnsub"
            android:layout_below="@id/btnmul"
            android:layout_toRightOf="@id/btn9"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="1"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn1"
            android:layout_below="@id/btn4"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="2"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn2"
            android:layout_below="@id/btn5"
            android:layout_toRightOf="@id/btn4"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:text="3"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn3"
            android:layout_below="@id/btn6"
            android:layout_toRightOf="@id/btn5"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="100dp"
            android:text="+"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#ff9800"
            android:id="@+id/btnadd"
            android:layout_below="@id/btnsub"
            android:layout_toRightOf="@id/btn6"
            />
        <Button
            android:layout_width="200dp"
            android:layout_height="80dp"
            android:text="0"
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btn0"
            android:layout_below="@id/btn1"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="."
            android:textSize="40dp"
            android:background="#1B1919"
            android:textColor="#F2F3F5"
            android:id="@+id/btndot"
            android:layout_below="@id/btn3"
            android:layout_toRightOf="@id/btn2"
            />
        <Button
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:text="="
            android:textSize="40dp"
            android:background="#ff9800"
            android:textColor="#F2F3F5"
            android:id="@+id/btnequal"
            android:layout_below="@id/btnadd"
            android:layout_toRightOf="@id/btn3"
            />
    </RelativeLayout>

</LinearLayout>